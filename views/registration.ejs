<!DOCTYPE html>
<html>
	<head>
		<title>registration</title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link href="../stylesheets/mycss.css" type="text/css" rel="stylesheet" />
		<link href="../stylesheets/widgit.css" type="text/css" rel="stylesheet" />
		<link href="../stylesheets/registration.css" type="text/css" rel="stylesheet" />
	</head>

	<body class="registration">
		<%- include('./navBarBeforeLogin', {}) %>
		<div class="form-container">
			<div class="title">Registration</div>
			<form action="/registration" method="POST">
				<div class="input-container">
					<div class="text-input-up">First Name</div>
					<input type="text" name="firstName" class="input" placeholder="Insert your first Name" />
				</div>
				<div class="input-container">
					<div class="text-input-up">Last Name</div>
					<input type="text" name="lastName" class="input" placeholder="Insert your last name" />
				</div>
				<div class="input-container">
					<div class="text-input-up">E-mail</div>
					<input type="email" name="email" class="input" placeholder="E-mail" />
				</div>
				<div class="input-container">
					<div class="text-input-up">Password</div>
					<input type="password" name="password" class="input" placeholder="Insert password" />
				</div>
				<div class="input-container">
					<div class="text-input-up">ID</div>
					<input type="text" name="id" class="input" placeholder="Insert ID" />
				</div>
				<div class="input-container">
					<div class="text-input-up">Date Of Birth</div>
					<input type="date" class="input" name="birthDay" />
				</div>

				<span class="gender-container">Gender: </span> &nbsp;
				<input type="radio" name="gender" value="Male" />
				<span class="gender-container">Male </span>

				<input type="radio" name="gender" value="Female" />
				<span class="gender-container">Female </span>

				<div class="buttons-container">
					<input type="submit" class="button" value="Add Person" />

					<input type="reset" class="button" value="Reset" />
				</div>
			</form>
		</div>
	</body>
</html>
